                    android:layout_height="wrap_content"
                    android:text="Check out the offers !!"
                    android:fontFamily="@font/itim"
                    android:textColor="@color/black"
                    android:padding="3dp"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@drawable/edit_text"
                        android:elevation="10dp"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="155dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/airpods"></ImageView>
                        <TextView
                            android:layout_width="155dp"
                            android:layout_height="25dp"
                            android:text="Airpods"
                            android:fontFamily="@font/itim"
                            android:textSize="17dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_margin="3dp"></TextView>
                        <TextView
                            android:layout_width="155dp"
                            android:layout_height="25dp"
                            android:text="From 599/- only"
                            android:fontFamily="@font/itim"
                            android:textSize="17dp"
                            android:textColor="@color/black"
                            android:gravity="center"></TextView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:background="@drawable/edit_text"
                        android:elevation="10dp"
                        android:layout_margin="10dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="155dp"
                            android:layout_height="100dp"
                            android:src="@drawable/smart_watch"></ImageView>
                        <TextView
                            android:layout_width="155dp"
                            android:layout_height="25dp"
                            android:text="Smart Watches"
                            android:fontFamily="@font/itim"
                            android:textSize="17dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_margin="3dp"></TextView>
                        <TextView
                            android:layout_width="155dp"
                            android:layout_height="25dp"
                            android:text="From 999/- only"
                            android:fontFamily="@font/itim"
                            android:textSize="17dp"
                            android:textColor="@color/black"
                            android:gravity="center"></TextView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/block1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/background1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_icon"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/hp1"></ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="@font/itim"
                        android:text="Recommended Items"
                        android:textColor="@color/black"
                        android:textSize="17dp"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="@font/itim"
                        android:text="Based on your activity"
                        android:textColor="@color/black"
                        android:textSize="14dp"></TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="240dp"
                        android:layout_margin="2dp"
                        android:src="@drawable/dell1"></ImageView>

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/itim"
                        android:gravity="center"
                        android:text="Dell Aspiran i5 11th gen..."
