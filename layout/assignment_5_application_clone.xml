                                android:fontFamily="@font/itim"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:gravity="center"></TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="210dp"
                            android:orientation="vertical"
                            android:layout_margin="10dp"
                            android:background="@drawable/edit_text"
                            android:elevation="10dp">

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/headset"></ImageView>
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:text="Headset's 45% off"
                                android:fontFamily="@font/itim"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:gravity="center"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="210dp"
                            android:orientation="vertical"
                            android:layout_margin="10dp"
                            android:background="@drawable/edit_text"
                            android:elevation="10dp">

                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/laptops"></ImageView>
                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:text="Laptops upto 30% off"
                                android:fontFamily="@font/itim"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="15dp"
                                android:gravity="center"></TextView>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sponsered"
                    android:id="@+id/ads2_1"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/itim"
                    ></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Infinix!!"
                    android:id="@+id/ads2_2"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/itim"
                    ></TextView>
            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/infinix_lap_add"
                android:layout_margin="10dp"
                ></ImageView>






            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"></ImageView>
        </LinearLayout>
    </ScrollView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/background_bottom">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/home_icon"></ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/cat"></ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/bell1"></ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/account"></ImageView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/cart"></ImageView>

    </LinearLayout>



