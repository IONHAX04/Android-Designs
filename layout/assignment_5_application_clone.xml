            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background1">

                <TextView
                    android:id="@+id/ads1_1"
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/itim"
                    android:gravity="center"
                    android:text="ColorFit Caliber"
                    android:textColor="@color/black"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:id="@+id/ads1_2"
                    android:layout_below="@+id/ads1_1"
                    android:text="15 day Battery"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:fontFamily="@font/itim"></TextView>

                <TextView
                    android:id="@+id/ads1_3"
                    android:layout_width="190dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/ads1_2"
                    android:fontFamily="@font/itim"
                    android:gravity="center"
                    android:text="₹ 1,499  to ₹ 3,999"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:typeface="sans"></TextView>

                <ImageView
                    android:id="@+id/ads1_11"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:padding="3dp"
                    android:layout_toRightOf="@+id/ads1_2"
                    android:src="@drawable/noise_smartwatch"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noise"
                    android:textColor="@color/black"
                    android:fontFamily="@font/itim"
                    android:textSize="20dp"
                    android:layout_toRightOf="@+id/ads1_11"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"></TextView>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
